<h1>Tweet #<%= @tweet.id %> by <%= @user.username %></h1>

<form action="/tweets/<%=@tweet.id%>/delete" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" id="submit" value="Delete Tweet">
</form>
<p>
  <a href="/tweets/<%=@tweet.id%>/edit">Edit Tweet</a>
</p>
<p><%= @tweet.content %></p>
